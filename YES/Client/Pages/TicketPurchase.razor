    </section>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    public EventDto Event { get; set; }

    //public UserDto User { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Event = await _service.GetEventByIdAsync(Id);
    }
}
