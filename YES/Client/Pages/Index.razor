@page "/"
@using YES.Shared
@inject HttpClient Http


<div class="page-background">
    <section>
        <h3 class="">Spotlight</h3>
        @foreach (EventDto item in _spotlights)
        {
            <EventList Event="item" />
        }
    </section>
</div>          



@code {
    private IEnumerable<EventDto> _spotlights;

    [Inject]
    private IEventService _service { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _spotlights = await _service.GetEventsFromAPIAsync();
    }

}