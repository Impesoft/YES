@page "/EventDetail/{Id:int}"
@inject IEventService _service
@if (Event != null)
{
    <div class="">
        <div class="banner" style="background-image: url(@Event.EventInfo.BannerImgUrl)">
            <h3>@Event.EventInfo.Name</h3>
        </div>
        <div class="row">
            <div class="col-8 center">Dit Event gaat door op @Event.EventInfo.EventDate.ToLongDateString()</div>
        </div>
        <div class="row">
            <div class="col-8 center">
                <p>@Event.EventInfo.Description</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">

                <a href="@Event.EventInfo.WebsiteUrl" class="btn btn-primary float-end">Our Site</a>
            </div>
        </div>>
    </div>

}
else
{
    <p>No Event found</p>
}


@code {
    [Parameter]
    public int Id { get; set; }

    public EventDto Event { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Event = await _service.GetEventByIdAsync(Id);
    }

}
