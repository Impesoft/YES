

<EditForm Model="Venue" OnValidSubmit="OnSubmitVenue" class="border border-warning my-3 p-5">
    <DataAnnotationsValidator />

    <h4 class="text-warning my-3">New Venue:</h4>

    <div class="row">
        <div class="col-xl-2 v-align">
            Name:
        </div>
        <div class="col-xl-10">
            <InputText class="form-control text-white bg-dark" @bind-Value="Venue.Name" placeholder="Name"></InputText>
            <span class="error-message"><ValidationMessage For="() => Venue.Name" /></span>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-2 v-align">
            Capacity:
        </div>
        <div class="col-xl-10">
            <InputNumber class="form-control text-white bg-dark" @bind-Value="Venue.Capacity" placeholder="Name"></InputNumber>
            <span class="error-message"><ValidationMessage For="() => Venue.Capacity" /></span>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-2">
            Address:
        </div>
        <div class="col-xl-5">
            <InputText class="form-control text-white bg-dark" @bind-Value="Venue.Address.Street" placeholder="Street"></InputText>
            <span class="error-message"><ValidationMessage For="() => Venue.Address.Street" /></span>
        </div>
        <div class="col-xl-5">
            <InputText class="form-control text-white bg-dark" @bind-Value="Venue.Address.StreetNumber" placeholder="House Number"></InputText>
            <span class="error-message"><ValidationMessage For="() => Venue.Address.StreetNumber" /></span>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-2">
        </div>
        <div class="col-xl-3">
            <InputText class="form-control text-white bg-dark" @bind-Value="Venue.Address.PostalCode" placeholder="Postal Code"></InputText>
            <span class="error-message"><ValidationMessage For="() => Venue.Address.PostalCode" /></span>
        </div>
        <div class="col-xl-3">
            <InputText class="form-control text-white bg-dark" @bind-Value="Venue.Address.City" placeholder="City"></InputText>
            <span class="error-message"><ValidationMessage For="() => Venue.Address.City" /></span>
        </div>
        <div class="col-xl-4">
            <InputText class="form-control text-white bg-dark" @bind-Value="Venue.Address.Country" placeholder="Country"></InputText>
            <span class="error-message"><ValidationMessage For="() => Venue.Address.Country" /></span>
        </div>
    </div>


    <button type="submit" class="btn btn-secondary mt-3">Add Venue</button>
</EditForm>

    @code {
        [Parameter]
        public VenueDto Venue { get; set; }

        [Parameter]
        public EventCallback OnSubmitVenue { get; set; }       


    }
