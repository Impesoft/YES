       
       <div class="row list-item align-middle py-1 my-1" @onclick="() => EventInfo.InvokeAsync(Event)">
           <div class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-2">
               @if (Event.EventInfo.EventDate > DateTime.MinValue)
               {
                   @Event.EventInfo.EventDate.ToString("dd-MM-yyyy");
               }
               else
               {
                   @:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;TBA
               }
           </div>
           <div class="col-12 col-sm-7 col-md-7 col-lg-8 col-xl-9">
               @Event.EventInfo.Name
           </div>
           <div class="col-12 col-sm-2 col-md-2 col-lg-1">
               @if (@Event.Status != "Default")
               {
                   <span class="@(Event.Status=="Cancelled" ? "text-danger" : "text-warning") float-end">@Event.Status</span>
               }
           </div>
       </div>
       

@code {
        [Parameter]
        public EventDto Event { get; set; }
        [Parameter]
        public EventCallback<EventDto> EventInfo { get; set; }
}
